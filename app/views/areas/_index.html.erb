<div id="content_left">

<h1>
<%if current_user.has_role?( :administrator ) %>
Areas del sistema
<%end%>
<%if current_user.has_role?(:project_leader ) %>
Areas que coordina
<%end%>
</h1>

<%if current_user.has_role?( :project_leader ) %>
<ul id="navigation">
<%end%>

<%if current_user.has_role( :administrator ) %>
<div id="areas">
<%end%>

  <%= render :partial => "area", :collection => @areas %>

<%if current_user.has_role?(:administrator ) %>
</div>
<%end%>

<%if current_user.has_role?(:project_leader ) %>
</ul>
<%end%>

</div>

<div id="content_right">
<%if current_user.has_role?( :administrator ) %>
	<h1>Agregar nueva area</h1>
	<div id="errors_list"></div>
	<%= form_for Area.new, :remote=>true do |f| %>
  		<%= render :partial => "form", :object => f %>
  		<%= f.submit "Agregar area" %>
	<% end %>
<%end%>    
</div>