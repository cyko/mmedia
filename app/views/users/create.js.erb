$('#errors_list').empty();
<% if @user.valid? %>
	$('#users').append("<%= escape_javascript(render @user) %>"); // Insert the _user partial at the bottom of the users list
	$('#user_login').val(""); // Clear the form login text field
	$('#user_email').val(""); // Clear the form email text field
<% else %>
    $('#errors_list').html("<%= escape_javascript( pluralize(@user.errors.count, "error") + " prohibited this user from being saved: " )%>");
	$('#errors_list').append("<%= escape_javascript(render :partial => "layouts/error_list", :collection => @user.errors.full_messages ) %>"); // Insert the _user partial at the bottom of the users list
<% end %>

