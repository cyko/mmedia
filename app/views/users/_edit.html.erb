<h1>Edit My Account</h1>

<% form_for @user, :url => account_path, :remote=>true do |f| %>
  <div id="flash_note"> <%= render :partial => "layouts/flash_data" %></div>
  <div id="error_list"><%= render :partial => "layouts/error_list", :collection => @user.errors.full_messages %></div>
  <%= render :partial => "form_edit", :object => f %></br>
  <%= f.submit "Guardar cambios" %>
<% end %>
